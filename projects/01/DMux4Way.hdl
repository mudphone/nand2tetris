/**
 * 4-way demultiplexor:
 * {a, b, c, d} = {in, 0, 0, 0} if sel == 00
 *                {0, in, 0, 0} if sel == 01
 *                {0, 0, in, 0} if sel == 10
 *                {0, 0, 0, in} if sel == 11
 */

CHIP DMux4Way {
    IN in, sel[2];
    OUT a, b, c, d;

    PARTS:
    Not(in=sel[1], out=ns1);
    And(a=in, b=ns1, out=in0);
    DMux(in=in0, sel=sel[0], a=a, b=b);

    And(a=in, b=sel[1], out=in1);
    DMux(in=in1, sel=sel[0], a=c, b=d);
}
